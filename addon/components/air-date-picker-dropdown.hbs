<BasicDropdown @onClose={{this.onClose}} as |dd|>
  <dd.Trigger>
    <input aria-label="calendar" title="calendar" value={{this.formattedDate}} />
  </dd.Trigger>
  <dd.Content>
    <AirDatePicker
      @initialSelectedDates={{@selectedDates}}
      @onDateSelect={{(fn this.onDateSelect dd)}}
      @range={{@range}}
    />
  </dd.Content>
</BasicDropdown>